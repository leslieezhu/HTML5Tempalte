  margin-top: 10rpx;
}

.catelist text {
  width: 20%;
  color: #000;
  font-size: 24rpx;
  border: 1rpx solid #f3f3f3;
  padding: 10rpx 0;
  border-radius: 10rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.catelist text.active {
  width: 20%;
  color: #0a96cb;
  font-size: 24rpx;
  border: 1rpx solid #0a96cb;
