/* pages/store/add.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}


.app .citem{
  width: 92%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 4%;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .citem .lt{
  width: 30%;
  height: 100rpx;
  float: left;
  font-size: 28rpx;
  color: #000;
}

.app .citem .rt{
  width: 70%;
  height: 100rpx;
  float: right;
}

.app .citem .ptitle{
  width: 100%;
  height: auto;
  font-size: 30rpx;
  color: #000;
}

.app .citem .rt .info{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  
}

.app .citem .rt .info input{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #000;
}

.app .citem .rt .info .tv {
  width: auto;
  color: #8a8a8a;
  font-size: 26rpx;
  margin-right: 15rpx;
  float: left;
}

.app .citem .rt .info image {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin: 30rpx 0;
}

.top_20{
  margin-top: 20rpx;
}

.app .bq{
  width: 92%;
  height: 400rpx;
  padding: 0 4%;
  background: #fff;
}

.app .bq .title{
  width: 96%;
  height: 100rpx;
  padding: 0 2%;
  line-height: 100rpx;
  color: #000;
  font-size: 28rpx;
}

.app .bq .coninput{
  width: 96%;
  height: 240rpx;
  margin: 0 2%;
}

.app .bq .coninput .input{
  width: 96%;
  height: 240rpx;
  font-size: 28rpx;
  padding: 20rpx 20rpx;
  color: #000;
  border-color: #dedede;
  border-width: 2rpx;
  border-style: solid;
  overflow: auto;
  word-break: break-all;
}