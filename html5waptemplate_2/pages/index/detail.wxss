/* pages/index/detail.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.header {
  width: 92%;
  height: auto;
  background: #fff;
  padding: 20rpx 4%;
}

.header .post {
  font-size: 30rpx;
  font-weight: bold;
  color: #515151;
  margin: 15rpx 0;
}

.header .price {
  font-size: 28rpx;
  color: #ff8c00;
  margin: 15rpx 0;
}

.header .tags {
  width: 100%;
  height: auto;
  margin-top: 15rpx;
  display: inline-block;
}

.header .tags .item {
  width: 22%;
  height: auto;
  margin-top: 20rpx;
  float: left;
  background: #f5f5f5;
  margin-right: 3%;
  text-align: center;
  padding: 6rpx 0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #515151;
}

.header .address {
  width: 100%;
  height: 80rpx;
  border-top: 1rpx #f5f5f5 solid;
  margin-top: 20rpx;
  line-height: 80rpx;
}

.header .address .hint {
  width: auto;
  height: 80rpx;
  font-size: 27rpx;
  color: #8a8a8a;
  float: left;
}

.header .address .name {
  float: left;
  width: 75%;
  height: 80rpx;
  padding: 0 3%;
  font-size: 27rpx;
  color: #000;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.header .describe {
  width: 100%;
  height: auto;
  line-height: 60rpx;
  display: flex;
}

.header .describe .item {
  width: auto;
  float: left;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.header .describe .item image {
  width: 35rpx;
  height: 35rpx;
}

.header .describe .item text {
  font-size: 26rpx;
  color: #8a8a8a;
  margin-left: 10rpx;
}

.company {
  margin-top: 20rpx;
  background: #fff;
  width: 92%;
  height: auto;
  background: #fff;
  padding: 20rpx 4%;
  display: flex;
  align-items: center;
}

.company .icon {
  width: 20%;
  float: left;
  height: 100rpx;
}

.company .info {
  width: 70%;
  float: left;
}

.company .info .name {
  width: 100%;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #000;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.company .info .labels {
  line-height: 30rpx;
  font-size: 26rpx;
  color: #8a8a8a;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.company .info .labels .vline {
  margin: 0 6rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}

.company .arrow {
  width: 10%;
  float: right;
  text-align: center;
}

.company .arrow image {
  width: 40rpx;
  height: 40rpx;
}

.job_info, .contact_info {
  margin-top: 20rpx;
  background: #fff;
  width: 92%;
  height: auto;
  background: #fff;
  padding: 20rpx 4%;
}

.font_01 {
  font-size: 30rpx;
  color: #0a96cb;
  line-height: 60rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.job_info .font_02 {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #000;
  line-height: 50rpx;
}

.job_info .font_03 {
  font-size: 24rpx;
  color: #000;
  line-height: 40rpx;
}

.contact_info .item {
  line-height: 40rpx;
  margin-top: 20rpx;
}

.contact_info .item .hint {
  width: auto;
  height: auto;
  font-size: 26rpx;
  color: #8a8a8a;
}

.contact_info .item .content {
  width: auto;
  height: auto;
  margin-left: 30rpx;
  font-size: 26rpx;
  color: #000;
}

.reminder_info {
  margin-top: 20rpx;
  background: #fff;
  width: 92%;
  height: auto;
  background: #fff;
  padding: 20rpx 4%;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #ff4500;
}

.margin_bottom_120 {
  margin-bottom: 120rpx;
}

.btn_apply {
  width: 80%;
  height: 80rpx;
  left: 10%;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  bottom: 20rpx;
  background: #0a96cb;
  border-radius: 10rpx;
  z-index: 1000;
}
