.item-header{
    padding:60rpx 30rpx;
}
.item-header .item-title{
    font-size:50rpx;
}

.item-header .item-detail{
    display: flex;
    justify-content: space-between;
    margin-top:20rpx
}
.item-detail .left-detail{
    flex: 1;
    margin-right:20rpx;
}

.left-detail .item-rate{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.left-detail .item-rate .comment-persons{
    font-size:30rpx;
    color: #ccc;
    margin-left:30rpx;
}

.item-detail .right-detail{
    width:200rpx;
    height:300rpx;
}
.item-detail .right-detail image{
    width:100%;
    height:100%;
}

.item-sud-detail{
    margin-top:40rpx;
    font-size:32rpx;
}
.item-sud-detail view{
    margin-bottom:10rpx;
}

.item-tags{
    padding:0 30rpx;
}
.item-tags .item-tags-title{
    color: #b3b3b3;
    font-size:32rpx;
    margin-bottom:20rpx;
}
.item-tags .item-tags-list{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}
.item-tags .item-tags-list text{
    padding:10rpx 20rpx;
    background: #f5f5f5;
    font-size:32rpx;
    color:#353535;
    border-radius: 40rpx;
    margin-right:20rpx;
    margin-bottom:20rpx;
}


.comment-list-group{
    padding:60rpx 30rpx;
}
.comment-list-group .comment-title{
    font-size:32rpx;
    color: #b3b3b3;

}

.comment-list-group .comment-group{
    margin-top:30rpx;
    display: flex;
    justify-content: flex-start;
}
.comment-group .left-comment{
    width:70rpx;
    margin-right:30rpx;
}
.left-comment .avatar{
    width:70rpx;
    height:70rpx;
    border-radius: 50%;
}

.comment-group .right-comment{
    flex:1;
}
.right-comment .username-rate{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.username-rate .username{
    font-size:36rpx;
    margin-right:20rpx;
}
.release-time{
    font-size:32rpx;
    color: #b3b3b3;
    margin-top:10rpx;
}
.content{
    font-size:32rpx;
    margin-top:10rpx;
    color: #353535;
}
.more-comment{
    text-align: center;
    color:#072 ;
    font-size: 32rpx;
    margin-bottom:40rpx;
}