}

.orderlist {
  position: absolute;
  width: 100%;
  right: 0.1%;
  top: 82rpx;
  z-index: 999;
  text-align: center;
  background: #fff;
  padding-bottom: 20rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.orderlist .item{
  width: 100%;
  height: auto;
  display: block;
  overflow: hidden;
}

.orderlist .item .title {
  margin-top: 20rpx;
  width: 94%;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight:  bold;
  color: #000;
  padding: 0 3%;
  height: auto;
  text-align: left;
}

.orderlist .item text {
  width: 20%;
  color: #000;
  font-size: 24rpx;
  border: 1rpx solid #f3f3f3;
  padding: 10rpx 0;
  border-radius: 10rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.orderlist .item text.active{
  width: 20%;
  color: #0a96cb;
  font-size: 24rpx;
  border: 1rpx solid #0a96cb;
  padding: 10rpx 0;
  border-radius: 10rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.zpin {
  width: 92%;
  margin-left: 1%;
  padding: 20rpx 3%;
  background: #fff;
  margin-top: 10rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  height: auto;
  overflow: hidden;
}

.main .zpin .title {
  width: 100%;
  height: auto;
  line-height: 60rpx;
  display: flex;
}

.zpin .title .name {
  width: 80%;
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  float: left;
  line-height: 60rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.zpin .title .price {
  width: 20%;
  font-size: 28rpx;
  font-weight: bold;
  color: #ff8c00;
  float: right;
  text-align: center;
}

.zpin .address {
  width: 100%;
  height: auto;
  background: #fff;
  line-height: 60rpx;
}

.zpin .address .name {
  width: auto;
  color: #8a8a8a;
  font-size: 26rpx;
  max-width: 73%;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  float: left;
}

.zpin .address .state {
  width: auto;
  max-width: 25%;
  color: #8a8a8a;
  font-size: 26rpx;
  margin-left: 2%;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  float: left;
}

.describe{
  width: 100%;
  height: auto;
  line-height: 60rpx;
  display: flex;
}

.describe .item{
  width: auto;
  float: left;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.describe .item image{
  width: 35rpx;
  height: 35rpx;
}

.zpin .describe .item text{
  font-size: 26rpx;
  color: #8a8a8a;
  margin-left: 10rpx;
}

.hline{
  width: 100%;
  height: 1rpx;
  background: #f5f5f5;
}

.zpin .info{
  width: 100%;
  height: 60rpx;
  margin-top: 15rpx;
  display: flex;
  align-items: center;
}

.zpin .info .nick, .zpin .info .post{
  font-size: 28rpx;
  color: #0a96cb;
}

.zpin .info .vline{
  color: #8a8a8a;
  font-size: 26rpx;
  margin: 0 6rpx;
}

.zpin .info .jp_tag{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
}

.margin_left_20{
  margin-left: 20rpx;
}
