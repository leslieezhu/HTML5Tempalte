/* pages/resume/education/slist.wxss */

.app {
  width: 100%;
  height: auto;
  font-size: 26rpx;
  overflow: hidden;
}

.app .add_school {
  width: 80%;
  height: 80rpx;
  margin: 60rpx 10%;
  background: #0a96cb;
  display: flex;
  background: #0a96cb;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.app .item {
  width: 100%;
  height: auto;
  background: #fff;
  padding: 30rpx 3%;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .item .title {
  width: 94%;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  color: #000;
}

.app .item .detail {
  width: 94%;
  height: auto;
  padding-top: 15rpx;
  padding-bottom: 30rpx;
}

.app .item .detail .lt {
  width: 85%;
  height: auto;
  float: left;
  font-size: 26rpx;
  color: #8a8a8a;
}

.app .item .detail .rt {
  width: 15%;
  height: auto;
  float: right;
  text-align: center;
}

.app .item .detail .rt image {
  width: 30rpx;
  height: 30rpx;
}
