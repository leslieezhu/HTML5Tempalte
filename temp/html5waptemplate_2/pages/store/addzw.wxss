/* pages/store/addzw.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .item{
  width: 92%;
  padding: 20rpx 4%;
  height: auto;
  background: #fff;
  display:  inline-block;
  overflow: hidden;
}

.app .item .citem {
  width: 100%;
  height: auto;
  background: #fff;
  display:  inline-block;
  overflow: hidden;
}

.app .item .citem .lt {
  width: 82%;
  height: auto;
  float: left;
}

.app .item .citem .rt {
  width: 18%;
  height: auto;
  float: right;
  text-align: right;
  padding-top: 25rpx;
}

.app .item .citem .rt switch{
  text-align: right;
}

.app .item .bottom {
  width: 100%;
  height: 40rpx;
  text-align: right;
}

.app .item .bottom image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}

.app .item .citem .title{
  width: 100%;
  height: auto;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #515151;
  font-weight: bold;
}

.app .item .citem .price{
  width: 100%;
  height: auto;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #ff8c00;
}

.app .item .citem .tags{
  width: 100%;
  height: auto;
  line-height: 60rpx;
  font-size: 24rpx;
}
