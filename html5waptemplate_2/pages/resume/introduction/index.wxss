/* 自我评价 */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .header {
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  background: #fff;
  line-height: 100rpx;
}

.app .header .name {
  font-size: 28rpx;
  color: #000;
}

.app .header .state {
  font-size: 28rpx;
  color: #f00;
  margin-left: 15rpx;
}

.app .cinput {
  width: 100%;
  height: 300rpx;
  background: #fff;
  padding-bottom: 30rpx;
}

.app .cinput .input {
  width: 88%;
  height: 280rpx;
  margin: 0 4%;
  padding: 2%;
  border: 1rpx #f5f5f5 solid;
}

.app .alert_info{
  margin: 4%;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #8a8a8a;
}

.app .btn_save {
  width: 80%;
  height: 80rpx;
  margin: 60rpx 10%;
  background: #0a96cb;
  display: flex;
  background: #0a96cb;
  justify-content: center;
  align-items: center;
  color: #fff;
}

