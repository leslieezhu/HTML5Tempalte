<view class="rate-group">
    <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{ lights }}" wx:key="*this" src="/images/rate-light.png"></image>
    <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{ halfs }}" wx:key="*this" src="/images/rate-half.png"></image>
    <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{ grays }}" wx:key="*this" src="/images/rate-gray.png"></image>
    <text wx:if="{{istext}}" style="font-size:{{fontsize}}rpx;font-color:{{fontcolor}};">{{ rate_text }}</text>
</view>