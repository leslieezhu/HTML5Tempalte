/* pages/index/index.wxss */

.header {
  height: 200rpx;
  width: 100%;
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(#0a96cb), to(rgba(10, 180, 203, 0.5)));
  position: relative;
}

.search {
  width: 80%;
  height: 80rpx;
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  left: 10%;
  top: 40rpx; 
  z-index: 1000;
  overflow: hidden;
}

.search button {
  float: right;
  width: 30%;
  border: 0;
  height: 80rpx;
  border-radius: 20rpx;
  margin-right: -2rpx;
  background: #fff;
  font-size: 26rpx;
  line-height: 80rpx;
}

.search input {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  margin-left: 5%;
  float: left;
}

#clouds2 {
  position: relative;
  z-index: 2;
}

.cloud1, .cloud2, .cloud3 {
  opacity: 0.5;
}

.cloud1 {
  width: 150rpx;
  height: 40rpx;
  background: #fff;
  position: absolute;
  top: 80rpx;
  border-radius: 200rpx;
}

.cloud1:after {
  content: '';
  position: absolute;
  background: #fff;
  width: 60rpx;
  height: 60rpx;
  top: -20rpx;
  left: 20rpx;
  border-radius: 200rpx;
}

.cloud1:before {
  content: '';
  position: absolute;
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  top: -40rpx;
  right: 10rpx;
  border-radius: 200rpx;
}

.cloud2 {
  width: 100rpx;
  height: 40rpx;
  background: #fff;
  position: absolute;
  top: 140rpx;
  left: 300rpx;
  border-radius: 200rpx;
}

.cloud2:after {
  content: '';
  position: absolute;
  background: #fff;
  width: 40rpx;
  height: 40rpx;
  top: -10rpx;
  left: 20rpx;
  border-radius: 200rpx;
}

.cloud2:before {
  content: '';
  position: absolute;
  background: #fff;
  width: 50rpx;
  height: 50rpx;
  top: -15rpx;
  right: 10rpx;
  border-radius: 200rpx;
}

.cloud3 {
  width: 150rpx;
  height: 40rpx;
  background: #fff;
  position: absolute;
  top: 90rpx;
  right: 10rpx;
  border-radius: 200rpx;
}

.cloud3:after {
  content: '';
  position: absolute;
  background: #fff;
  width: 60rpx;
  height: 60rpx;
  top: -20rpx;
  left: 20rpx;
  border-radius: 200rpx;
}

.cloud3:before {
  content: '';
  position: absolute;
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  top: -40rpx;
  right: 10rpx;
  border-radius: 200rpx;
}

.main {
  width: 100%;
}

.select {
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 26rpx;
  border-bottom: #e2e2e2 1rpx solid;
  position: relative;
}

.select .item {
  width: 33.3%;
  float: left;
  height: 80rpx;
  text-align: center;
}

.select .item .cate {
  line-height: 80rpx;
  float: left;
  margin-left: 20%;
}

.select .item image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 25rpx;
}

.catelist {
  position: absolute;
  top: 82rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  z-index: 1000;
  background: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.xzlist{
  position: absolute;
  top: 82rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  z-index: 1000;
  background: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
}


