/* 预览简历 */
.app{
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .module{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #fff;
}

.app .module .pitem{
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .module .pitem .lt{
  width: 80%;
  height: 100rpx;
  float: left;
  font-size: 28rpx;
  color: #000;
}

.app .module .pitem .rt{
  width: 20%;
  height: 100rpx;
  float: left;
  text-align: right;
}

.app .module .pitem .rt image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}

.app .module .child{
  width: 100%;
  height: auto;
} 

.app .module .child .citem{
  width: 92%;
  padding: 0 4%;
  height: auto;
  line-height: 50rpx;
  display: inline-flex;
} 

.app .module .child .citem .bline{
  width: 90%;
  height: 2rpx;
  background: #f5f5f5;
  margin: 0 5%;
  overflow: hidden;
}

.app .module .child .citem .title{
  width: 20%;
  float: left;
  height: auto;
  font-size: 26rpx;
  color: #8a8a8a;
}

.app .module .child .citem .info{
  width: 80%;
  float: left;
  height: auto;
  font-size: 26rpx;
  color: #000;
}