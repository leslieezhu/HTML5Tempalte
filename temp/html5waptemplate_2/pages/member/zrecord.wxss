/* pages/member/zrecord.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app  .menu {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: solid 1rpx #f4f5f6;
}

.menu text {
  float: left;
  width: 25%;
  font-size: 30rpx;
  text-align: center;
}

.app .menu text.active {
  color: #07b7ce;
  border-bottom: 5rpx solid #07b7ce;
}

.app .citem {
  width: 92%;
  height: auto;
  background: #fff;
  padding: 0 4%;
  margin-top: 20rpx;
}

.app .citem .header {
  width: 100%;
  height: 60rpx;
  padding-top: 30rpx;
  padding-bottom: 15rpx;
  line-height: 60rpx;
}

.app .citem .header .lt {
  width: 78%;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}

.app .citem .header .rt {
  width: 22%;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  text-align: right;
  font-size: 28rpx;
  color: #000;
}

.app .citem .body {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .citem .body .lb {
  width: 78%;
  height: auto;
  float: left;
  font-size: 26rpx;
  color: #8a8a8a;
}

.app .citem .body .rb {
  width: 22%;
  height: auto;
  float: right;
  text-align: right;
}

.app .citem .body .rb image{
  width: 30rpx;
  height: 30rpx;
}

.app .citem .bottoms {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.app .citem .bottoms .ld {
  width: 78%;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
}

.app .citem .bottoms .rd {
  width: 22%;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  text-align: right;
  font-size: 24rpx;
}

.alert {
  width: auto;
  height: auto;
  font-size: 24rpx;
  color: #8a8a8a;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  border: 1rpx #8a8a8a solid;
}
