/* pages/resume/index.wxss */

.app {
  width: 100%;
  height: auto;
  font-size: 26rpx;
  overflow: hidden;
}

.info_item {
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.info_item .title {
  width: 68%;
  height: 100rpx;
  float: left;
  margin-left: 2%;
  font-size: 28rpx;
}

.info_item .state {
  width: 20%;
  height: 100rpx;
  float: left;
  text-align: center;
  font-size: 26rpx;
  color: #8a8a8a;
}

.info_item .arrow {
  width: 10%;
  height: 100rpx;
  float: right;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.info_item .arrow image {
  width: 40rpx;
  height: 40rpx;
}
