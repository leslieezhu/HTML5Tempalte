/**app.wxss**/

page {
  background: #f3f3f3;
  font-size: 24rpx;
}

page image {
  width: 100rpx;
  height: 100rpx;
}

.footer {
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1rpx solid #e2e2e2;
}

.footer .ft_item {
  width: 25%;
  height: 100%;
  text-align: center;
  float: left;
}

.footer .on {
  color: #1ba8b9;
}

.footer .ft_item image {
  height: 45rpx;
  width: 45rpx;
  margin: 0 auto;
  display: block;
  margin-top: 10rpx;
}

.footer  .ft_item text {
  text-align: center;
  font-size: 26rpx;
  display: block;
  margin: 0 auto;
  margin-top: 10rpx;
}

.kongbai {
  height: 120rpx;
  width: 100%;
  overflow: hidden;
}

.more, .nomore {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  background: #fff;
  width: 98%;
  margin: 0 auto;
  border: 1rpx solid #e2e2e2;
  margin-top: 10rpx;
}

.nomore {
  color: #ccc;
}

.bdrt {
  border-right: 1rpx solid #e2e2e2;
}

.bdbt {
  border-bottom: 1rpx solid #e2e2e2;
}

.jszc {
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  overflow: hidden;
  color: #ccc;
}

.table_btn {
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  background: #0a96cb;
  margin-top: 30rpx;
}

.shop {
  width: 98%;
  margin-left: 1%;
  background: #fff;
  margin-top: 10rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  height: auto;
  overflow: hidden;
  display: flex;
}

.shop .face {
  width: 22%;
  float: left;
  display: flex;
  margin: 15rpx auto;
  justify-content: center;
}

.shop .face image {
  height: 130rpx;
  width: 130rpx;
  float: left;
}

.shop .info {
  width: 78%;
  height: auto;
  margin: 15rpx 0rpx;
  margin-right: 15rpx;
  overflow: hidden;
  float: left;
}

.shop .info .title {
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.shop .info .auth {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
}

.shop .info .auth image {
  width: 35rpx;
  height: 35rpx;
}

.shop .info .auth text {
  font-size: 26rpx;
  color: #8a8a8a;
  margin-left: 10rpx;
}

.shop .info .address {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #8a8a8a;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.shop .info .type {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #8a8a8a;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  border-bottom: 1rpx #f5f5f5 solid;
}

.shop .info .type .vline {
  margin: 0 6rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}

.shop .info .rzhao {
  margin-top: 8rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #8a8a8a;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.shop .info .rzhao .hot {
  font-size: 26rpx;
  color: #0a96cb;
  margin: 0 6rpx;
}

.shop .info .rzhao image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}

.qiehuan {
  position: fixed;
  height: 80rpx;
  left: 0;
  bottom: 0;
  line-height: 80rpx;
  color: #0a96cb;
  text-align: center;
  background: #fff;
  border-top: 1rpx solid #e2e2e2;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qiehuan image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.qrcode_dialog {
  width: 80%;
  margin: 0 10%;
  height: 560rpx;
  background: #fff;
  z-index: 999;
  position: fixed;
  bottom: 250rpx;
  top: 250rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border-top: 1rpx #e2e2e2 solid;
  border-bottom: 1rpx #e2e2e2 solid;
  padding-bottom: 20rpx;
  -webkit-box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.3);
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.3);
}

.qrcode_dialog .qrcode_bg{
  width: 60%;
  margin: 10% 20%;
  height: 360rpx;
}

.qrcode_dialog .qrcode_bg image{
  width: 100%;
  height: 360rpx;
}

.qrcode_dialog .btn_save{
  width: 60%;
  height: 70rpx;
  background: #0a96cb;
  margin: 0 20%;
  color: #fff;
  font-size: 26rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}